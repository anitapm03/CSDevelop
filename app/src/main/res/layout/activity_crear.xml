<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".publicaciones.CrearPublicacion">

    <LinearLayout
        android:id="@+id/cabeceraPubli"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:orientation="horizontal"
        android:padding="16dp">

        <Button
            android:id="@+id/volverAtras"
            android:layout_width="43dp"
            android:layout_height="31dp"
            android:drawableEnd="@drawable/ic_volver" />

        <TextView
            android:id="@+id/title_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingStart="16dp"
            android:text="Nueva publicacion"
            android:textColor="#fff"
            android:textSize="22sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/cabeceraPubli"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/borde_mensaje_user"
        android:orientation="vertical">


        <EditText
            android:id="@+id/txtPubli"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@drawable/bordes"
            android:gravity="bottom|start"
            android:hint="Cuentanos que tal el ultimo concierto al que viniste con nosotros!"
            android:inputType="textMultiLine"
            android:padding="10dp"

            android:shadowColor="#FF0000"
            android:textColor="@color/white"
            android:textColorHint="#BFBABA" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/aviso_foto"
            android:layout_gravity="center"
            android:textColor="@color/white">

        </TextView>

        <Button
            android:id="@+id/addFoto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="AÃ±adir imagen!" />

        <ImageView
            android:id="@+id/fotoPubli"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/borde_mensaje_otros"
            android:padding="10dp"
            android:visibility="gone">

        </ImageView>

        <Button
            android:id="@+id/publicar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Publicar!" />
    </LinearLayout>

</RelativeLayout>