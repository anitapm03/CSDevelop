<?xml version="1.0" encoding="utf-8"?>
<!--El código muestra una lista de chats con diferentes conciertos como títulos y últimos mensajes.
El diseño se basa en varios LinearLayouts anidados. El primer LinearLayout contiene un TextView con el título
de la vista "Chats" y tiene un fondo negro.
A continuación, hay varios LinearLayouts que muestran información de chat para cada concierto.
Cada LinearLayout contiene un ImageView con una imagen del artista del concierto,
seguido de otro LinearLayout que contiene varios TextViews en los que se muestran el nombre dwl grupo,
y el último mensaje del chat. -->
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/black"
            android:orientation="horizontal"
            android:padding="16dp">

            <TextView
                android:id="@+id/title_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingStart="16dp"
                android:text="Chats"
                android:textColor="#fff"
                android:textSize="22sp"
                android:textStyle="bold" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="78dp"
                android:layout_height="103dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/fpfito" />

            <LinearLayout
                android:layout_width="331dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/chat_title"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:text="   Concierto Fito"
                    android:textColor="#000000"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/chat_last_message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="    quedamos a las 20:00 allí"
                    android:textSize="18sp" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/imageView"
                android:layout_width="87dp"
                android:layout_height="91dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/fpmelendi" />

            <LinearLayout
                android:layout_width="331dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/chat_title1"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:text="   Concierto Melendi"
                    android:textColor="#000000"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/chat_last_message1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="    Que ganaaas!"
                    android:textSize="18sp" />

            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="82dp"
                android:layout_height="99dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/fppablo" />

            <LinearLayout
                android:layout_width="331dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/chat_title3"
                    android:layout_width="291dp"
                    android:layout_height="wrap_content"
                    android:text="   Concierto Pablo Alborán"
                    android:textColor="#000000"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/chat_last_message3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="    A qué hora??"
                    android:textSize="18sp" />

            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="102dp"
                android:layout_height="107dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/fpdavidbisbal" />

            <LinearLayout
                android:layout_width="331dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/chat_title4"
                    android:layout_width="306dp"
                    android:layout_height="wrap_content"
                    android:text="   Concierto David Bisbal"
                    android:textColor="#000000"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/chat_last_message4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="    Después del concierto qué ..."
                    android:textSize="18sp" />

            </LinearLayout>
        </LinearLayout>


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>