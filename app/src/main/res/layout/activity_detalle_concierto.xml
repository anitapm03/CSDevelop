<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetalleConcierto"
    >

    <LinearLayout
        android:id="@+id/layoutPrincipal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">


        <LinearLayout
            android:id="@+id/cabeceraDetalle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/black"
            android:orientation="horizontal"
            android:padding="16dp">

            <Button
                android:id="@+id/logout"
                android:layout_width="43dp"
                android:layout_height="31dp"
                android:drawableEnd="@drawable/ic_volver" />

            <TextView
                android:id="@+id/title_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingStart="16dp"
                android:text="Detalles del Evento"
                android:textColor="#fff"
                android:textSize="22sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/informacionDetalle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp"
            android:background="@color/black">

            <ImageView
                android:id="@+id/fotoEvento"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:srcCompat="@tools:sample/avatars" />

            <TextView
                android:id="@+id/nombreEvento"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="nombre evento"
                android:textColor="@color/white"
                android:textSize="40sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/fechaEvento"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="fecha evento"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/horaEvento"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="hora evento"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/nombreSala"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="aqui va el nombre de la sala"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/direccionSala"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="aqui direccion o mapa de la sala"
                android:textColor="@color/white" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="bottom"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/enlace"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2.5dp"
                    android:layout_marginRight="2.5dp"
                    android:backgroundTint="@color/white"
                    android:text="Entradas"
                    android:textColor="@color/black" />

                <Button
                    android:id="@+id/unirse"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2.5dp"
                    android:layout_marginRight="2.5dp"
                    android:backgroundTint="@color/white"
                    android:text="Unirme al grupo"
                    android:textColor="@color/black" />

                <Button
                    android:id="@+id/favorito"
                    android:layout_width="53dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2.5dp"
                    android:layout_marginRight="2.5dp"
                    android:backgroundTint="@color/white"
                    android:drawableLeft="@drawable/ic_no_fav"
                    android:drawableTint="@color/black" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>