<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SocialFragment">
<!--Cada sección está dentro de un LinearLayout con un borde
 personalizado y está colocada en la pantalla usando
  las restricciones de ConstraintLayout. -->
    <LinearLayout
        android:id="@+id/barra"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:orientation="horizontal"
        android:padding="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/title_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingStart="16dp"
            android:text="Social"
            android:textColor="#fff"
            android:textSize="22sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/l1"
        android:layout_width="392dp"
        android:layout_height="288dp"
        android:layout_margin="5dp"
        android:layout_marginStart="3dp"
        android:layout_marginEnd="3dp"
        android:background="@drawable/bordes"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/barra">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="66dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView16"
                android:layout_width="12dp"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:src="@drawable/fotoperfil" />

            <TextView
                android:id="@+id/textView13"
                android:layout_width="264dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Julia ha compartido una imagen del concierto de Melendi!"
                android:textColor="#000000"
                android:textSize="22sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/imageView17"
            android:layout_width="match_parent"
            android:layout_height="207dp"
            android:layout_margin="10dp"
            android:src="@drawable/conciertomelendi" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/l2"
        android:layout_width="406dp"
        android:layout_height="287dp"
        android:layout_marginStart="3dp"
        android:layout_marginTop="300dp"
        android:layout_marginEnd="3dp"
        android:background="@drawable/bordes"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/barra">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="66dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView116"
                android:layout_width="12dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="4dp"
                android:src="@drawable/miifoto" />

            <TextView
                android:id="@+id/textView113"
                android:layout_width="264dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Ana ha compartido una imagen del concierto de Fito!"
                android:textColor="#000000"
                android:textSize="22sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/imageView173"
            android:layout_width="match_parent"
            android:layout_height="207dp"
            android:layout_margin="10dp"
            android:src="@drawable/conci_fito" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>